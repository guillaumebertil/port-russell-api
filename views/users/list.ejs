<div class="container">

    <!-- En-tête -->
    <div class="row mb-4">
        <div class="col-12">
            <h2>
                <i class="bi bi-people"></i> Gestion des utilisateurs
            </h2>
        </div>
    </div>

    <!-- Boutons -->
    <div class="row mb-3">
        <div class="col-12">
            <!-- Ajouter un utilisateur -->
            <a href="/users/add" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Ajouter un utilisateur
            </a>

            <!-- Retour au dashboard -->
            <a href="/dashboard" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Retour au dashboard
            </a>
        </div>
    </div>

    <!-- Messages -->

    <!-- Succès -->
    <% if (success) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    <% } %>

    <!-- Erreur -->
    <% if (error) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    <% } %>

    <!-- Tableau -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-body">

                    <% if (users.length === 0 ) { %>
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> Aucun utilisateur enregistré
                    </div>
                    <% } else { %>
                        <div class="table-responsive">
                            <table class="table table-hover table-striped">

                                <!-- Tableau header -->
                                <thead class="table-dark">
                                    <tr>
                                        <th>Nom d'utilisateur</th>
                                        <th>Email</th>
                                        <th>Date de création</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>

                                <!-- Tableau body -->
                                <tbody>
                                    <% users.forEach(u => { %>
                                    <tr>
                                        <td><i class="bi bi-person-circle"></i> <strong><%= u.username %></strong></td>
                                        <td><%= u.email %></td>
                                        <td><%= new Date(u.createdAt).toLocaleDateString('fr-FR') %></td>
                                        <td class="text-center">
                                            <a href="/users/<%= u.email %>/edit" class="btn btn-sm btn-warning">
                                                <i class="bi bi-pencil"></i> Modifier
                                            </a>
                                            <% if (u.email !== user.email) { %>
                                                <button onclick="confirmDelete('<%= u.email %>')" class="btn btn-sm btn-danger">
                                                    <i class="bi bi-trash"></i> Supprimer
                                                </button>
                                            <% } else { %>
                                                <button class="btn btn-sm btn-secondary" disabled title="Vous ne pouvez pas supprimer ce compte">
                                                    <i class="bi bi-trash"></i> Supprimer
                                                </button>
                                            <% } %>
                                        </td>
                                    </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Importation du script -->
<script src="/javascripts/users.js"></script>