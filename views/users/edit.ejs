<div class="container">

    <!-- En-tête -->
    <div class="row mb-4">
        <div class="col-12">
            <h2>
                <i class="bi bi-pencil"></i> Modifier l'utilisateur
            </h2>
        </div>
    </div>

    <!-- Formulaire -->
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">

                    <!-- Affiche un message si ereur -->
                    <% if (error) { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle"></i> <%= error %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    <% } %>

                    <form action="/users/<%= editUser.email %>/edit" method="POST">
                        
                        <!-- Username -->
                        <div class="mb-3">
                            <label for="username" class="form-label">
                                <i class="bi bi-person"></i> Nom d'utilisateur *
                            </label>
                            <input type="text" class="form-control" id="username" name="username" value="<%= editUser.username %>" required>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label for="email" class="form-label">
                                <i class="bi bi-envelope"></i> Email
                            </label>
                            <input type="email" class="form-control" value="<%= editUser.email %>" disabled>
                            <small>L'email ne peut pas être modifié</small>

                            <!-- Password (optionnel) -->
                            <div class="mb-3">
                                <label for="password" class="form-label">
                                    <i class="bi bi-lock"></i> Nouveau mot de passe (optionnel)
                                </label>
                                <input type="password" class="form-control" id="password" name="password" minlength="8">
                                <small class="text-muted">Laissez vide pour converser le mot de passe</small>
                            </div>

                            <!-- Confirmation du password -->
                            <div class="mb-3">
                                <label for="passwordConfirm" class="form-label">
                                    <i class="bi bi-lock-fill"></i> Confirmez le nouveau mot de passe
                                </label>
                                <input type="password" class="form-control" id="passwordConfirm" name="passwordConfirm" minlength="8">
                            </div>

                            <!-- Boutons -->
                            <div class="d-flex justify-content-between">
                                
                                <!-- Annuler -->
                                <a href="/users" class="btn btn-secondary">
                                    <i class="bi bi-x-circle"></i> Annuler
                                </a>

                                <!-- Modifier -->
                                <button type="submit" class="btn btn-warning">
                                    <i class="bi bi-check-circle"></i> Modifier
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Importation du script -->
<script src="/javascripts/users.js"></script>