<div class="container">
    
    <!-- En-tête du dashboard -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-light shadow">
                <div class="card-body">
                    <h2 class="mb-3">
                        <i class="bi bi-speedometer2"></i> Tableau de bord
                    </h2>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <p class="mb-2">
                                <strong><i class="bi bi-person-circle"></i> Utilisateur :</strong> 
                                <%= user.username %>
                            </p>
                            <p class="mb-2">
                                <strong><i class="bi bi-envelope"></i> Email :</strong> 
                                <%= user.email %>
                            </p>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <p class="mb-0">
                                <strong><i class="bi bi-calendar3"></i> Date :</strong>
                                <%= today %>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Réservations en cours -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-calendar-check"></i> Réservations en cours
                    </h4>
                </div>
                <div class="card-body">
                    
                    <% if (currentReservations.length === 0) { %>
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> Aucune réservation en cours
                    </div>
                    <% } else { %>
                    
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>Catway N°</th>
                                    <th>Client</th>
                                    <th>Bateau</th>
                                    <th>Début</th>
                                    <th>Fin</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% currentReservations.forEach(reservation => { %>
                                <tr>
                                    <td><strong>#<%= reservation.catwayNumber %></strong></td>
                                    <td><%= reservation.clientName %></td>
                                    <td><%= reservation.boatName %></td>
                                    <td><%= new Date(reservation.startDate).toLocaleDateString('fr-FR') %></td>
                                    <td><%= new Date(reservation.endDate).toLocaleDateString('fr-FR') %></td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                    
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Liens rapides -->
    <div class="row mt-4">
        <div class="col-md-4 mb-3">
            <div class="card shadow text-center">
                <div class="card-body">
                    <i class="bi bi-water display-1 text-primary"></i>
                    <h5 class="mt-3">Catways</h5>
                    <a href="/catways" class="btn btn-primary mt-2">
                        Gérer les catways
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-3">
            <div class="card shadow text-center">
                <div class="card-body">
                    <i class="bi bi-calendar-check display-1 text-success"></i>
                    <h5 class="mt-3">Réservations</h5>
                    <a href="/reservations" class="btn btn-success mt-2">
                        Gérer les réservations
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-3">
            <div class="card shadow text-center">
                <div class="card-body">
                    <i class="bi bi-people display-1 text-info"></i>
                    <h5 class="mt-3">Utilisateurs</h5>
                    <a href="/users" class="btn btn-info mt-2">
                        Gérer les utilisateurs
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>