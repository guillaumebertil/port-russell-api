<div class="container">
    
    <!-- En-tête -->
    <div class="row mb-4">
        <div class="col-12">
            <h2>
                <i class="bi bi-plus-circle"></i> Ajouter un catway
            </h2>
        </div>
    </div>

    <!-- Formulaire -->
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    
                    <% if (error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle"></i> <%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                    <% } %>

                    <form action="/catways/add" method="POST">
                        
                        <!-- Numéro du catway -->
                        <div class="mb-3">
                            <label for="catwayNumber" class="form-label">
                                <i class="bi bi-hash"></i> Numéro du catway *
                            </label>
                            <input 
                                type="number" 
                                class="form-control" 
                                id="catwayNumber" 
                                name="catwayNumber"
                                min="1"
                                required
                            >
                            <small class="text-muted">Doit être unique</small>
                        </div>

                        <!-- Type -->
                        <div class="mb-3">
                            <label for="catwayType" class="form-label">
                                <i class="bi bi-diagram-3"></i> Type *
                            </label>
                            <select class="form-select" id="catwayType" name="catwayType" required>
                                <option value="">-- Choisir un type --</option>
                                <option value="short">Short</option>
                                <option value="long">Long</option>
                            </select>
                        </div>

                        <!-- État -->
                        <div class="mb-3">
                            <label for="catwayState" class="form-label">
                                <i class="bi bi-info-circle"></i> État *
                            </label>
                            <textarea 
                                class="form-control" 
                                id="catwayState" 
                                name="catwayState" 
                                rows="3"
                                required
                            >bon état</textarea>
                            <small class="text-muted">Description de l'état du catway</small>
                        </div>

                        <!-- Boutons -->
                        <div class="d-flex justify-content-between">
                            <a href="/catways" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Ajouter
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>